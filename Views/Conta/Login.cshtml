@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="card-title mb-0">Bem-vindo de volta!</h3>
                </div>
                <div class="card-body p-4">

                    @if (ViewBag.Erro != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Erro</div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" name="email" class="form-control rounded-pill" placeholder="exemplo@email.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Password</label>
                            <input type="password" name="password" class="form-control rounded-pill" placeholder="******" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Entrar ✈️</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-white border-0 pb-4">
                    <p class="mb-0">Ainda não tens conta?</p>
                    <a asp-action="Registar" class="text-primary fw-bold text-decoration-none">Criar Conta Grátis</a>
                </div>
            </div>
        </div>
    </div>
</div>