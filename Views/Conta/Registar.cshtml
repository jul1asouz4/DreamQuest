@model DreamQuest.Models.Utilizador

@{
    ViewData["Title"] = "Registar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary text-white text-center py-3">
                    <h3 class="card-title mb-0">Junta-te à DreamQuest</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Registar" method="post">

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold">Nome Completo</label>
                            <input asp-for="Nome" class="form-control rounded-pill" placeholder="Como te chamas?" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control rounded-pill" type="email" placeholder="O teu melhor email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold">Password</label>
                            <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="Uma senha segura" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-secondary btn-lg rounded-pill text-white">Criar Conta ✨</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-white border-0 pb-4">
                    Já tens conta? <a asp-action="Login" class="text-secondary fw-bold text-decoration-none">Faz Login aqui</a>
                </div>
            </div>
        </div>
    </div>
</div>