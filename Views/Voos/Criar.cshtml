@model DreamQuest.Models.Voo

@{
    ViewData["Title"] = "Adicionar Novo Voo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold">✈️ Lançar Novo Voo</h4>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Criar" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanhiaAerea" class="form-label fw-bold">Companhia Aérea</label>
                                <input asp-for="CompanhiaAerea" class="form-control" placeholder="Ex: TAP, Ryanair..." />
                                <span asp-validation-for="CompanhiaAerea" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LugaresDisponiveis" class="form-label fw-bold">Lugares Totais</label>
                                <input asp-for="LugaresDisponiveis" class="form-control" type="number" min="1" />
                                <span asp-validation-for="LugaresDisponiveis" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origem" class="form-label fw-bold">Origem</label>
                                <input asp-for="Origem" class="form-control" placeholder="Cidade de Partida" />
                                <span asp-validation-for="Origem" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Destino" class="form-label fw-bold">Destino</label>
                                <input asp-for="Destino" class="form-control" placeholder="Cidade de Chegada" />
                                <span asp-validation-for="Destino" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataHoraPartida" class="form-label fw-bold">Data e Hora</label>
                                <input asp-for="DataHoraPartida" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DataHoraPartida" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Preco" class="form-label fw-bold">Preço (€)</label>
                                <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Confirmar e Criar Voo</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>