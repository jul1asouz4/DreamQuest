@model IEnumerable<DreamQuest.Models.Reserva>

@{
    ViewData["Title"] = "Minhas Viagens";
}

<div class="container mt-5">
    <h2 class="mb-4 text-success fw-bold">🌍 As Minhas Viagens</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm border-0">
            <h4 class="alert-heading">Ainda não tens viagens marcadas!</h4>
            <p>Vai ao catálogo e escolhe o teu próximo destino.</p>
            <hr>
            <a asp-action="Index" class="btn btn-primary">Ver Destinos Disponíveis</a>
        </div>
    }
    else
    {
        <div class="card shadow border-0">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Histórico de Reservas</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Data da Reserva</th>
                            <th>Companhia</th>
                            <th>Origem / Destino</th>
                            <th>Partida</th>
                            <th>Preço</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DataReserva.ToString("dd/MM/yyyy")</td>
                                <td>@(item.Voo?.CompanhiaAerea ?? "Voo Cancelado")</td>
                                <td>
                                    @if (item.Voo != null)
                                    {
                                        <span>@item.Voo.Origem ➝ @item.Voo.Destino</span>
                                    }
                                </td>
                                <td>@(item.Voo?.DataHoraPartida.ToString("dd/MM/yyyy HH:mm"))</td>
                                <td>@(item.Voo?.Preco.ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar ao Catálogo</a>
        </div>
    }
</div>